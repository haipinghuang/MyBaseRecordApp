<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="MDTheme" parent="AppTheme">
        <!-- status bar color -->
        <item name="colorPrimaryDark">#7590e1</item>
        <!-- toolbar（actionbar）-->
        <item name="colorPrimary">#3a5fcb</item>
        <!-- toolbar text color-->
        <item name="android:textColorPrimary">#ffffff</item>
        <!--<item name="android:colorAccent">#3cbe28</item>-->
        <item name="android:windowBackground">@color/bg_window</item>
        <!--<item name="android:navigationBarColor">@android:color/darker_gray</item>-->
        <!--<item name="android:windowSoftInputMode">stateHidden|adjustPan</item>-->
        <!--<item name="android:alertDialogStyle">@style/Theme.AppCompat.Light.Dialog.Alert</item>-->
        <!--<item name="android:toolbarStyle">@style/ToolbarStyle</item>-->
        <!-- Here we setting appcompat’s actionBarStyle -->
        <!--<item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>-->
    </style>

    <style name="MaterialDrawer.Light.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="AppTheme.ToolbarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <!--<item name="actionOverflowButtonStyle">@style/AppTheme.OverflowButtonStyle</item>-->
        <item name="android:textColor">@android:color/white</item>
        <item name="titleTextAppearance">
            @style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse
        </item>
        <item name="android:titleTextAppearance">
            @style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse
        </item>
        <item name="subtitleTextAppearance">
            @style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle
        </item>
    </style>
    <!--ToolBar 样式-->
    <style name="ToolbarStyle" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">false</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
        <item name="actionOverflowMenuStyle">@style/actionOverflowMenuStyle</item>
    </style>

    <style name="actionOverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!--<item name="android:actionBarDivider">@color/lv_bg_color1</item>-->
        <!--<item name="android:textColor">@color/tab_value_color</item>-->
        <!--<item name="android:textSize">12sp</item>-->
        <!--<item name="android:background">@color/comm_white</item>-->
    </style>
    <!--更多菜单 button syle-->
    <style name="actionOverflowButtonStyle" parent="Base.Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@mipmap/right_more</item>
    </style>

    <style name="ActivityRightInLeftOutStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_from_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_from_right</item>
    </style>

    <style name="Activity_translucent_status_bar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Activity_translucent_navigation_bar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <!--Activity切换动画-->
    <style name="ActivityAnimTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/ActivityRightInLeftOutStyle</item>
    </style>
</resources>
